<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:paddingEnd="8dp"
    android:paddingTop="4dp"
    android:paddingStart="8dp"
    android:background="@color/white_90"
    >


    <ImageView
        android:id="@+id/profileimg2"
        android:layout_width="73dp"
        android:layout_height="74dp"
        android:background="@drawable/woman_profile_svgrepo_com"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/dltChat"
        android:layout_width="40dp"
        android:layout_height="42dp"
        android:layout_margin="@dimen/text_margin"
        android:layout_marginEnd="16dp"
        android:background="@drawable/baseline_delete_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_margin="@dimen/text_margin"
        android:layout_marginTop="4dp"
        android:text="Title Example"
        android:textAppearance="?attr/textAppearanceListItem"
        app:layout_constraintEnd_toStartOf="@+id/dltChat"
        app:layout_constraintStart_toEndOf="@+id/profileimg2"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvDate"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_margin="@dimen/text_margin"
        android:text="Date Example"
        app:layout_constraintEnd_toStartOf="@+id/dltChat"
        app:layout_constraintStart_toEndOf="@+id/profileimg2"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>